extends ../page

append options
    - let here = '/learn';
    - let menuName = 'Learn';

mixin card(book)
    a.card(href='/learn/' + book.id)
        .image
            img(src='/img/book_' + book.id + '.jpg')
        .content
            .header= book.name

append main
    .ui.centered.four.doubling.cards
        each book in books
            +card(book)
