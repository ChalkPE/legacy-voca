extends ../page

append options
    - let here = '/sign-in';
    - let menuName = 'Sign in';

append stylesheets
    style.
        #main { height: 100%; }
        #main .column { max-width: 512px; }

append main
    .ui.middle.aligned.center.aligned.grid
        .column
            h2.ui.big.icon.header
                i.sign.in.icon
                .content Sign in to your account
            .ui.stacked.segment
                form.ui.large.form(action='/sign-in', method='post')
                    .field
                        .ui.left.icon.input
                            i.mail.icon
                            input(name='email', placeholder='Email', type="email")
                    .field
                        .ui.left.icon.input
                            i.lock.icon
                            input(name='password', placeholder='Password', type="password")
                    button.ui.fluid.large.blue.submit.button(type='submit') Sign in
            .ui.message
                | New to here?&nbsp;
                a(href='/sign-up') Sign up.
