h1.ui.header
    img.ui.circular.image(src='favicon.png', width='1em', height='1em')
    .content
        | #{title || 'Voca'}
        .sub.header= vocaPackage.description

#form
    include error
    form.ui.stacked.segment.equal.width.form(action='/', method='post')
        .field
            label Email
            .ui.left.icon.input
                i.mail.icon
                input(name='email', placeholder='Email', type='text')
        .fields
            .field
                label Password
                .ui.left.icon.input
                    i.lock.icon
                    input(name='password', placeholder='Password', type='password', minlength='8')
            .field
                label Confirm password
                .ui.left.icon.input
                    i.lock.icon
                    input(name='confirm', placeholder='Confirm password', type='password', minlength='8')
        .fields
            .three.wide.field
                label Grade
                input(name='grade', placeholder='Grade', type='text', minlength='1')
            .three.wide.field
                label Class
                input(name='class', placeholder='Class', type='text', minlength='1')
            .four.wide.field
                label Number
                input(name='number', placeholder='Number', type='text', minlength='1')
            .six.wide.field
                label Name
                .ui.left.icon.input
                    i.user.icon
                    input(name='name', placeholder='Name', type='text')
        .inline.field
            .ui.checkbox
                input.hidden(name='subscribe', type='checkbox')
                label Yes, I'd like to receive email updates.
        button.ui.primary.submit.button(type='submit') Create account
        .ui.error.message

    .ui.center.aligned.message
        i.help.icon
        | Already have an account?&nbsp;
        a(href='/sign-in') Click here
        | .
