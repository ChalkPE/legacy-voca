mixin menu(href, icon, classes)
    a.item(class=(here === href ? ' active' : '') + (classes ? ' ' + classes : ''), href=href)
        if icon
            i(class=icon + ' icon')

.ui.inverted.fixed.borderless.large.icon.menu
    .ui.container
        +menu('/',         'home', 'header')
        +menu('/learn',    'book')
        +menu('/exam',     'sticky note')
        +menu('/download', 'download')
        .right.menu
            if user
                +menu('/sign-out',  'sign out')
                if user.admin && here === '/'
                    a.active.red.item(href='/admin') Admin
            else
                +menu('/sign-in',  'sign in')
            block rightMenu
